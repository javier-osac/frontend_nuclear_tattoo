---
import Base from "@/layouts/Base_Dashboard.astro";
---

<Base>
<form id="admin" action="/" method="POST" enctype="multipart/form-data" class="max-w-5xl mx-auto bg-white dark:bg-gray-800 shadow-md dark:shadow-lg rounded-2xl p-8 space-y-6 text-gray-800 dark:text-gray-100 mb-20">
    <div><h2>Actualizar Perfil</h2></div>
  <!-- Nombre y Apellido -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="name" class="block text-sm font-medium">Nombre</label>
      <input type="text" name="name" id="name" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
    <div>
      <label for="last_name" class="block text-sm font-medium">Apellido</label>
      <input type="text" name="last_name" id="last_name" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
  </div>

  <!-- Identificación y Usuario -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="identification_number" class="block text-sm font-medium">Número de identificación</label>
      <input type="text" name="identification_number" id="identification_number" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
    <div>
      <label for="user_name" class="block text-sm font-medium">Nombre de usuario</label>
      <input type="text" name="user_name" id="user_name" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500">
    </div>
  </div>

  <!-- Teléfono y Correo -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="phone" class="block text-sm font-medium">Teléfono</label>
      <input type="text" name="phone" id="phone" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500">
    </div>
    <div>
      <label for="email" class="block text-sm font-medium">Correo electrónico</label>
      <input type="email" name="email" id="email" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
  </div>

  <!-- Contraseña y Fecha de nacimiento -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="password" class="block text-sm font-medium">Contraseña</label>
      <input type="password" name="password" id="password" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
    <div>
      <label for="birth_date" class="block text-sm font-medium">Fecha de nacimiento</label>
      <input type="date" name="birth_date" id="birth_date" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500">
    </div>
  </div>

  <!-- Género -->
  <div>
    <label for="gender" class="block text-sm font-medium">Género</label>
    <select name="gender" id="gender" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500">
      <option value="">Seleccione</option>
      <option value="Masculino">Masculino</option>
      <option value="Femenino">Femenino</option>
    </select>
  </div>

  <!-- Dirección -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div>
      <label for="residence_country" class="block text-sm font-medium">País</label>
      <input type="text" name="residence_country" id="residence_country" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500">
    </div>
    <div>
      <label for="residence_state" class="block text-sm font-medium">Departamento</label>
      <input type="text" name="residence_state" id="residence_state" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500">
    </div>
    <div>
      <label for="residence_city" class="block text-sm font-medium">Ciudad</label>
      <input type="text" name="residence_city" id="residence_city" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 focus:border-blue-500">
    </div>
  </div>

  <!-- Archivos -->
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
    <div>
      <label for="user_photo" class="block text-sm font-medium">Foto de perfil</label>
      <input type="file" name="user_photo" id="user_photo" accept="image/*" class="mt-1 block w-full text-sm text-gray-700 dark:text-gray-300 file:bg-blue-100 dark:file:bg-blue-900 file:text-dark-700 dark:file:text-red-300">
    </div>
    <div>
      <label for="camara_comercio" class="block text-sm font-medium">Cámara de comercio</label>
      <input type="file" name="camara_comercio" id="camara_comercio" accept="application/pdf" class="mt-1 block w-full text-sm text-gray-700 dark:text-gray-300 file:bg-blue-100 dark:file:bg-blue-900 file:text-dark-700 dark:file:text-red-300">
    </div>
    <div>
      <label for="bank_certificate" class="block text-sm font-medium">Certificado bancario</label>
      <input type="file" name="bank_certificate" id="bank_certificate" accept="application/pdf" class="mt-1 block w-full text-sm text-gray-700 dark:text-gray-300 file:bg-blue-100 dark:file:bg-blue-900 file:text-dark-700 dark:file:text-red-300">
    </div>
    <div>
      <label for="identification_photo" class="block text-sm font-medium">Foto de cédula</label>
      <input type="file" name="identification_photo" id="identification_photo" accept="image/*" class="mt-1 block w-full text-sm text-gray-700 dark:text-gray-300 file:bg-blue-100 dark:file:bg-blue-900 file:text-dark-700 dark:file:text-red-300">
    </div>
  </div>

  <!-- Botón -->
  <div class="text-center">
    <button type="submit" class="inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-white bg-blue-600 hover:bg-blue-700 rounded-xl font-medium">Guardar</button>
  </div>
</form>


<script type="module" src="/scripts/views/controller_admin.js"></script>
</Base>